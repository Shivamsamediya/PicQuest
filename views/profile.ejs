<% include ./partials/header.ejs %>

<body class="bg-gray-300">

    <form  id="uploadform" hidden action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>

    <section class="container mx-auto px-4 py-8">
        <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex flex-col items-center space-x-8">
                <div class="relative">
                    <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 flex items-center justify-center bg-zinc-200 rounded-full">
                        <i class=" ri-pencil-fill bg-zinc-200"></i>
                    </span>
                    <img class="w-32 h-32 rounded-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                </div>
                <div>
                    <h2 class="text-2xl font-bold text-gray-800 mx-6"><%= user.username %></h2>
                    <p class=" text-2xl text-zinc-700 font-semibold">full Stack Developer</p>
                </div>
            </div>
            <div class="mt-6">
                <p class="text-gray-500 font-semibold text-center">Lorem, ipsum dolor sit amet consectetur adipisicing elit!.</p>
            </div>
            <div class="mt-6 flex justify-center">
                <a href="/add" class="bg-red-500 text-white font-bold py-2 px-4 rounded-xl hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">Add New Post</a>
            </div>
        </div>
    </section>

    <section class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Pins</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 flex justify-evenly">
                <% user.post.forEach(function(post){%>
                    <div class="bg-white p-4 rounded-lg shadow-md flex flex-col">
                        <img class="w-full h-48 object-cover rounded-md" src="./images/uploads/<%= post.image %>" alt="Pin Image">
                        <h3 class="mt-4 text-lg font-bold text-gray-800"><%= post.title %></h3>
                        <p class="mt-2 text-gray-600"><%= post.description %></p>
                    </div>
                <% }) %>
        </div>
    </section>

    <footer class="bg-white shadow-md mt-8">
        <div class="container mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2024 PicQuest. All rights reserved.
        </div>
    </footer>
</body>

<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })


</script>
<% include ./partials/footer.ejs %>